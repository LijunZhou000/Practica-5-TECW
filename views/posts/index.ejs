<!DOCTYPE html>
<html>
    <head>
        <title>MiniProject</title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <h1>Posts:</h1>
        <table>
            <% for (let post of posts) { %>
            <tr>
            <td>
                <% include ../attachments/_attachment %>
            </td>
            <td>
            <!-- <a href="/posts/<%= post.id %>/play"><%= post.title %></a> -->
                <%= post.title %>
            </td>
            <td>
            <a href="/posts/<%= post.id %>" class="button">Show</a>
            </td>
            <td>
            <a href="/posts/<%= post.id %>/edit" class="button">Edit</a>
            </td>
            <td>
            <a href="/posts/<%= post.id %>?_method=DELETE" onClick="return confirm('Delete: <%= post.id %>');" class="button">Delete</a>
            </td>
            </tr>
            <% } %>
        </table>
        <a href="/posts/new" class="button">Create New Post</a>
    </body>
</html>